{
	widgets: [
		{
			class: Popup,
			name: quit-confirm,
			visible: false,
			modal: true,
			center-on-show: true,
			layout: layouts/popup-confirm.json,
			message-widget: message,
			ok-widget: ok,
			cancel-widget: cancel
		},
		{
			class: Table,
			name: table-buttons,
			fill-parent: true,
			defaults: {
				pad-tlbr: [0, 0, 10, 0],
				fill-xy: [0.75, 0.25],
				expand-xy: [true, true]
			},
			rows: [
				{
					cells: [
						{
							widget: {
								class: TextButton,
								name: play,
								text-key: btn-play
							}
						}
					]
				},
				{
					cells: [
						{
							widget: {
								class: TextButton,
								name: quit,
								text-key: btn-quit
							}
						}
					]
				}
			]
		}
	],
	values: {
		btn-play: {
			en: "Play",
			fr: "Jouer"
		},
		btn-quit: {
			en: "Quit",
			fr: "Quitter"
		}
	}
}